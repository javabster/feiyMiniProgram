/* Feiy styles:
      light turquoise (feiy primary): #37D7D4
      slightly darker turquise (feiy secondary): #31c7c5
      dark grey: #999999
      font: Arvo, fontweight: lighter
        */

.signupBox {
  width: 80%;
  height: 100%;
  padding: 5%;
  background-color: #EDECEC;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
}

.signUpView {
  display: flex;
  padding: 15px;
  flex-direction: column;
}

.inputSubText {
  font-size: 12px;
  color: #aaa;
}


.heading{
  font-size: 50px;
  text-align: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.bodyText{
  font-size: 15px;
  text-align: center;
  margin-top: 5%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.inputText {
  font-size: 15px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.signupInput {
  background-color: white;
  height: 45px;
  width: 100%;
  border-radius: 5px;
  margin-top: 2%;
  padding-left: 10px;
}

.blueButton {
  height: 45px;
  width: 50%;
  background-color:#37D7D4;
  color: #F8F8F8;
  font-weight: lighter;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
}

.uploadImageBtn {
  height: 45px;
  width: 80%;
  background-color: #999999;
  color: white;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: lighter;
}