/**index.wxss**/

.signupBox {
  width: 80%;
  height: 100%;
  padding: 5%;
  background-color: #EDECEC;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
}

.signUpView {
  display: flex;
  padding: 15px;
  flex-direction: column;
}

.inputSubText {
  font-size: 12px;
  color: #aaa;
}


.heading{
  font-size: 50px;
  text-align: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.bodyText{
  font-size: 15px;
  text-align: center;
  margin-top: 5%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.inputText {
  font-size: 15px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.signupInput {
  background-color: white;
  height: 45px;
  width: 100%;
  border-radius: 5px;
  margin-top: 2%;
  padding-left: 10px;
}

.blueButton {
  height: 45px;
  width: 50%;
  background-color:#31c7c5;
  color: #F8F8F8;
  font-weight: lighter;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
}